@model SpiceHouse.Data.Models.ViewModels.OrderDetailsCarViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    @if (Model.ListProducts.Count > 0)
    {
        <br />
        <input id="userId" asp-for="@Model.ListProducts[0].ApplicationUserId" hidden />
        <div class="backgroundWhiteBorder">
            <div class="container">
                <div class="card">
                    <div class="card-body">
                        @foreach (var item in Model.ListProducts)
                        {
                            <div class="row">
                                <div class="d-none d-lg-block col-lg-2 text-center py-2">
                                    <img src="@item.MenuItem.Picture" class="rounded" width="120" height="80" />
                                </div>
                                <div class="col-12 text-sm-center col-lg-5 text-lg-left">
                                    <h4><strong>@item.MenuItem.Name</strong></h4>
                                    <h4><small>@item.MenuItem.Description</small></h4>
                                </div>
                                <div class="col-12 text-sm-center col-lg-5 text-lg-right row">
                                    <div class="col-4 text-md-right" style="padding-top:5px;">
                                        <h6><strong>@item.MenuItem.Price Leva <span class="text-muted">x</span> @item.Count </strong></h6>
                                    </div>
                                    <div class="col-6 col-sm-4 col-lg-6">
                                        <div class="float-right mx-1">
                                            <a href="#" class="nav-link">
                                                <i class="fas fa-plus"></i>
                                            </a>
                                        </div>
                                        <div class="float-right mx-1">
                                            <a href="#" class="nav-link">
                                                <i class="fas fa-minus"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-2 col-sm-4 col-lg-2 text-right">
                                        <a href="#" class="nav-link">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <hr />
                        }
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 offset-md-1 col-lg-4 offset-lg-3 pr-4">
                <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between bg-light">
                        <span class="text-info"> Total (Lev)</span>
                        <strong class="text-info"> <span id="txtOrderTotal">@Model.Order.OrderTotal leva</span></strong>
                    </li>
                </ul>
            </div>
        </div>
    }
    else
    {
        <div class="backgroundWhiteBorder">Please add an item.</div>
    }
</form>