@model IEnumerable<SpiceHouse.Data.Models.Coupon>
    @{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <br /><br />
    <div class="border backgroundWhite">
        <div class="row">
            <div class="col-6">
                <h2 class="text-info">Coupon List</h2>
            </div>
            <div class="col-6 text-right">
                <partial name="_CreateButtonPartial" />
            </div>
        </div>
        <br />
        <div>
            @if (Model.Any())
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(c => c.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(c => c.Discount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(c => c.MinimumAmount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(c => c.IsActive)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(c => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(c => item.Discount)
                </td>
                <td>
                    @Html.DisplayFor(c => item.MinimumAmount)
                </td>
                <td>
                    @Html.DisplayFor(c => item.IsActive)
                </td>
                <td>
                    <partial name="_ThreeButtonsPartial" model="item.Id" />
                </td>
            </tr>
                }
            </table>
        }
        else
        {
            <p>No Coupons exists!</p>
        }
        </div>
    </div>
