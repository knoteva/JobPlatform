@using SpiceHouse.Data.Models
@using SpiceHouse.Data.Models.Enums
@model SpiceHouse.Data.Models.ViewModels.MenuItemViewModel

@{
    ViewData["Title"] = "Details";
}
<div class="backgroundWhiteBorder row">
    <h2 class="text-info">Details Menu Item</h2>
    <br />
    <div class="col-10">
        <fieldset disabled>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Name" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MenuItem.Name" class="form-control"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Description" class="custom-label"></label>
                </div>
                <div class="col-8">
                    @Html.TextAreaFor(m => m.MenuItem.Description)
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Price" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MenuItem.Price" class="form-control"/>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.CategoryId" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MenuItem.Category.Name" class="form-control"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.SubCategoryId" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MenuItem.SubCategory.Name" class="form-control"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Spicyness" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <select asp-for="MenuItem.Spicyness" asp-items="Html.GetEnumSelectList<ESpicy>()" class="form-control"></select>
                </div>
            </div>
        </fieldset>
    </div>
    <div class="col-1"></div>
    <div class="col-3">
        <img src="@Model.MenuItem.Picture" width="100%" style="border-radius: 5px; border: 1px solid #bbb9b9;"/>
    </div>
    <div class="col-8">
        <div class="col-8 offset-4">
            <partial name="_Details_BackButton" model="Model.MenuItem.Id"/>
        </div>
    </div>
</div>


@section Scripts{
    <script>
    tinymce.init({
        forced_root_block: false,
        selector: 'textarea',
        plugins: "lists",
        readonly : 1
    });</script>

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}