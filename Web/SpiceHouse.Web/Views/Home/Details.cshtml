@using SpiceHouse.Common.Extensions
@using SpiceHouse.Data.Models
@using SpiceHouse.Data.Models.Enums
@model SpiceHouse.Data.Models.ShoppingCar


@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post">
    <div class="border backgroundWhite row">
        <input type="hidden" asp-for="MenuItem.Id" />
        <h2 class="text-info">Meal Details</h2>
        <br />
        <div class="col-8">
            <div class="col-3 offset-1 d-none d-md-block">
                <img src="@Model.MenuItem.Picture" width="100%" style="border-radius: 5px; border: 1px solid #bbb9b9;" alt="" />
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Name" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MenuItem.Name" class="form-control" readonly/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Description" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    @Html.Raw(Model.MenuItem.Description)
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Price" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MenuItem.Price" class="form-control" readonly/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.CategoryId" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MenuItem.Category.Name" class="form-control" readonly/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.SubCategoryId" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MenuItem.SubCategory.Name" class="form-control" readonly/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Spicyness" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <select asp-for="MenuItem.Spicyness" disabled asp-items="Html.GetEnumSelectList<ESpicy>()" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ItemsCount" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ItemsCount" class="form-control"/>
                </div>
                <span asp-validation-for="ItemsCount" class="text-danger"></span>
            </div>

        </div>
        <div class="col-8">
            <div class="col-8 offset-4">
                <partial name="_Order_BackButton" model="Model.MenuItem.Id" />
            </div>
        </div>
    </div>
    <input asp-for="MenuItemId" hidden />
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}