@model IEnumerable<SpiceHouse.Data.Models.MenuItem>

@if (Model.Any())
{
    <div class="col-12 post @Model.FirstOrDefault().Category.Name.Replace(" ",string.Empty) menu-restaurant">
        <div class="row">
            <h3 class="text-success"> @Model.FirstOrDefault().Category.Name </h3>
        </div>

        @foreach (var item in Model)
        {
            <div class="border border-info rounded col-12" style="margin-bottom:10px; margin-top:10px; padding:10px">
                <div class="row">
                    <div class="col-md-3 col-sm-12">
                        <img src="@item.Picture" width="100%" />
                    </div>
                    <div class="col-md-9 col-sm-12">
                        <div class="row pr-3">
                            <div class="col-8">
                                <label class="text-primary" style="font-size:130%;">@item.Name</label>
                                @if (item.Spicyness == "1")
                                {
                                    <img srcset="/images/sweet.png" title="Sweet" alt="" />
                                }
                                @if (item.Spicyness == "2")
                                {
                                    <img srcset="/images/middle.png" title="Middle" alt="" />
                                }
                                @if (item.Spicyness == "3")
                                {
                                    <img srcset="/images/hot.png" title="Hot" alt="" />
                                }
                            </div>
                            <div class="col-4 text-right">
                                <h4>$@item.Price</h4>
                            </div>
                        </div>


                        <div class="row col-12 text-justify d-none d-md-block">
                            <p>@Html.Raw(item.Description)</p>
                        </div>
                        <div class="col-md-3 col-sm-12 offset-md-9 text-center">
                            <a asp-action="Details" class="btn btn-success form-control" asp-route-id="@item.Id">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="p-4"></div>
    </div>
}